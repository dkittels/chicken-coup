<div class="row col-md-8 col-md-offset-2">
  <h1><%= @game.name %></h1>

<div class="panel panel-default">
  <% if @game.messages.any? %>
    <div class="panel-body" id="messages">
      <%= render partial: 'messages/message', collection: @game.messages%>
    </div>
  <%else%>
    <div class="panel-body hidden" id="messages">
    </div>
  <%end%>
</div>

  <%= render partial: 'messages/message_form', locals: {message: @message, game: @game}%>
</div>