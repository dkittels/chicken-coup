<% if !(session['user_id']) %>
  <h1>Log In</h1>
  <%= form_for :login, :url => { :action => :create } do |f| %>
    <div>
      <%= f.label :username %>
      <%= f.text_field :username, autofocus: true %>
    </div>
    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div>
      <%= f.submit "Log In" %>
    </div>
  <% end %>
  <%= link_to 'Create New User', browser_index_path %>
  <a href="/users/new">Create New User</a>
<% end %>

